<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F5F9"


    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="연 습"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:textStyle="bold" />


    <TextView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="20dp"
        android:text="0/8"
        android:textSize="17dp"
        android:textStyle="bold"
        android:id="@+id/scoreout2"/>











    <TextView

        android:layout_marginTop="50dp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/engout"
        android:textSize="80dp"
        android:textColor="#000"

        android:layout_gravity="center_horizontal"

        />






        <EditText
            android:elevation="2dp"

            android:layout_height="200dp"

            android:textColor="#000000"

            android:id="@+id/edit"
            android:layout_marginTop="180dp"
            android:layout_width="370dp"
            android:background="@drawable/border"
            android:layout_marginLeft="20dp"

            android:gravity="center"
            android:privateImeOptions="defaultInputmode=korean"
            android:hint="정답을 입력하세요"

            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="400dp"
        android:layout_gravity="center_horizontal">

        <Button

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/correct"

            android:textStyle="bold"
            android:textColor="#000000"
            android:backgroundTint="#69DCE3"
            android:text="제출"
            />
        <Button

            android:layout_marginLeft="60dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#69DCE3"
            android:text="종료"

            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/button7"
            />
    </LinearLayout>





    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:id="@+id/score"


       android:background="#000080"
        android:visibility="invisible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="100dp"



            android:textColor="#ffffff"
            android:id="@+id/scoreout"
            android:layout_marginLeft="65dp"
            />
        <Button
            android:layout_width="250dp"
            android:layout_marginTop="130dp"
            android:layout_height="50dp"
            android:id="@+id/scorebutton1"
            android:text="나가기"
            android:backgroundTint="#E4C36E"
            android:textColor="#000000"

            android:layout_marginLeft="20dp"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="190dp"
            android:id="@+id/scorebutton2"
            android:text="다시하기"
            android:backgroundTint="#E4C36E"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            />

    </FrameLayout>









</FrameLayout>