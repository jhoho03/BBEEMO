<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F5F9"


    >







    <TextView
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="연 습"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:textStyle="bold" />


    <TextView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="20dp"
        android:text="0/8"
        android:textSize="17dp"
        android:textStyle="bold"
        android:id="@+id/scoreout2"/>









    <TextView

        android:layout_marginTop="50dp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/korout"
        android:textSize="120dp"
        android:textColor="#000"

        android:layout_gravity="center_horizontal"
        />









    <TextView
        android:id="@+id/answer"
        android:layout_gravity="center"

        android:layout_height="200dp"
        android:textColor="#000000"

        android:layout_width="370dp"
        android:background="@drawable/border"
        android:hint="정답을 입력하세요"
        android:layout_marginTop="10dp"

        android:gravity="start"
        android:textSize="30dp"

        android:textStyle="bold" />






    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"

            >

            <Button
                android:backgroundTint="#69DCE3"
                android:layout_width="125dp"
                android:layout_height="70dp"
                android:text="·"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="45dp"
                android:id="@+id/button1"
                />
            <Button

                android:layout_width="125dp"
                android:layout_marginLeft="11dp"
                android:layout_height="70dp"
                android:text="-"
                android:textSize="45dp"
                android:textStyle="bold"
                android:textColor="#000000"

                android:backgroundTint="#69DCE3"
                android:id="@+id/button2"
                />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="90dp"
                android:layout_marginLeft="11dp"
                android:layout_height="match_parent"
                android:backgroundTint="#69DCE3"
                android:src="@drawable/iconmonstr_backspace_lined" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="75dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:text="스페이스"
                android:layout_gravity="center_horizontal"
                android:layout_width="125dp"
                android:layout_height="60dp"

                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:backgroundTint="#69DCE3"
                android:id="@+id/button4"
                />
            <Button
                android:layout_width="125dp"
                android:layout_marginLeft="11dp"
                android:layout_height="60dp"
                android:text="/"
                android:textSize="45dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:backgroundTint="#69DCE3"
                android:id="@+id/button5"
                />
            <Button
                android:layout_width="90dp"
                android:layout_height="60dp"

                android:textSize="45dp"
                android:text="^"
                android:layout_marginLeft="11dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:backgroundTint="#69DCE3"
                android:id="@+id/button6"
                />


        </LinearLayout>

        <Button
            android:layout_marginTop="150dp"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종료"
            android:textStyle="bold"
            android:textColor="#000000"
            android:backgroundTint="#69DCE3"
            android:id="@+id/button7"
            />


    </RelativeLayout>
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:id="@+id/score"


        android:background="#000080"
        android:visibility="invisible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="100dp"







            android:textColor="#ffffff"
            android:id="@+id/scoreout"
            android:layout_marginLeft="65dp"
            />
        <Button
            android:layout_width="250dp"
            android:layout_marginTop="130dp"
            android:layout_height="50dp"
            android:id="@+id/scorebutton1"
            android:text="나가기"

            android:backgroundTint="#E4C36E"
            android:textColor="#000000"


            android:layout_marginLeft="20dp"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="190dp"
            android:id="@+id/scorebutton2"
            android:text="다시하기"

            android:layout_marginLeft="20dp"

            android:backgroundTint="#E4C36E"
            android:textColor="#000000"
            />

    </FrameLayout>










</FrameLayout>